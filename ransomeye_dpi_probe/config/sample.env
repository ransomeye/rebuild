# Details of functionality of this file: Environment variable template for DPI Probe configuration

# Core API Configuration
CORE_API_URL=https://localhost:8443

# Network Configuration
CAPTURE_IFACE=eth0
PROBE_ADMIN_PORT=9080
PROBE_ADMIN_HOST=127.0.0.1
PROBE_METRICS_PORT=9092

# Buffer and Storage
BUFFER_DIR=/var/lib/ransomeye-probe/buffer
PROBE_MAX_CAPTURE_MB=1000
PROBE_MAX_PENDING_SIZE_MB=5000
PROBE_MAX_ARCHIVED_AGE_DAYS=30
PROBE_CHUNK_SIZE_MB=100

# Model Configuration
MODEL_DIR=/home/ransomeye/rebuild/models
PROBE_MIN_SAMPLES_RETRAIN=100
PROBE_RETRAIN_INTERVAL_SEC=3600

# Privacy Filter
PROBE_PRIVACY_REDACT=strict

# Certificate Paths
PROBE_CERT_PATH=/etc/ransomeye-probe/certs/probe.crt
PROBE_KEY_PATH=/etc/ransomeye-probe/certs/probe.key
CA_CERT_PATH=/etc/ransomeye-probe/certs/ca.crt
SERVER_PUBLIC_KEY_PATH=/etc/ransomeye-probe/certs/server.pub

# Receipt Store
RECEIPT_STORE_DIR=/var/lib/ransomeye-probe/receipts

# Feedback and Training
FEEDBACK_DIR=/var/lib/ransomeye-probe/feedback

# Logging
LOG_DIR=/var/log/ransomeye-probe
LOG_LEVEL=INFO

# Upload Configuration
PROBE_UPLOAD_MAX_RETRIES=3
PROBE_UPLOAD_RETRY_DELAY_SEC=60

# Probe Identification
PROBE_ID=probe-001

